@model IEnumerable<ProyectoEmergencias.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create" class="btn btn-outline-warning">Nuevo Registro</a>
</p>
<h1 style="text-align: center;">Listado de pacientes</h1>
<form asp-controller="Pacientes" asp-action="Index" method="get" class="float-right">
    <p>
        <input type="text" name="SearchString"  />
        <input type="submit" value="Buscar" class="btn btn-outline-warning"/>
    </p>
</form>
<table class="table text-light ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identity)
            </th>
            <th>
                @Html.DisplayName("Fecha Nacimiento")    
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayName("Estado Civil") 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_Civil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td >

                <a asp-action="Edit" asp-route-id="@item.PacienteID" class="btn btn-outline-light ">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.PacienteID" class="btn btn-outline-light ">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.PacienteID" class="btn btn-outline-light ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
