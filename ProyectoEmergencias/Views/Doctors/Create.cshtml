@model ProyectoEmergencias.Models.Doctor

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo Registro</h1>

<h4>Doctor</h4>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreDoc" class="control-label"></label>
                <input asp-for="NombreDoc" class="form-control" />
                <span asp-validation-for="NombreDoc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Especialidad" class="control-label"></label>
                <input asp-for="Especialidad" class="form-control" />
                <span asp-validation-for="Especialidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="estado_servicio" class="control-label"></label>
                
                <input asp-for="estado_servicio" list="a" />
                <datalist id="a">
                    <option value="Activo"></option>
                    <option value="Inactivo"></option>
                </datalist>
                
                <span asp-validation-for="estado_servicio" class="text-danger"></span>
               
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
