@model IEnumerable<ProyectoEmergencias.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create" class="btn btn-outline-warning">Nuevo Registro</a>
</p>
<h1 style="text-align: center;">Registro de Doctores</h1>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado_servicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado_servicio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DoctorID" class="btn btn-outline-light ">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DoctorID" class="btn btn-outline-light ">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DoctorID" class="btn btn-outline-light ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
